{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node", "jest"]
    },
    "include": [
        "src/**/*",
        "src/prisma/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}